# Twitter Scraper Configuration
# Copy this file to .env and fill in your values

# Authentication token for API requests (set this to a secure random string)
TWITTER_SCRAPER_TOKEN=your_secure_token_here

# Twitter cookies in JSON format (optional, but recommended for authenticated scraping)
# Get these from your browser's developer tools when logged into Twitter
TWITTER_COOKIES=[{"name":"auth_token", "value":"your_twitter_auth_token", "domain":".twitter.com", "path":"/", "secure":true, "httpOnly":true}]

# Default Twitter user ID (optional)
TWITTER_USER_ID=your_twitter_user_id

# Server port (Render will set this automatically)
PORT=3000